# Sample configuration for Research Agent
# Copy this to .env and fill in your actual API keys

# AI Models - At least one is required
# Anthropic Claude API
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Google Gemini API
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Default AI model to use (claude or gemini)
DEFAULT_MODEL=gemini

# Sela Network API (for X and Web Search)
SELA_API_KEY=your-sela-api-key-here
SELA_API_ENDPOINT=https://api.selanetwork.io/api/rpc/scrapeUrl
SELA_TIMEOUT_MS=60000

# Optional: Logging configuration
LOG_LEVEL=INFO

# Optional: Output directory
OUTPUT_DIR=./reports
